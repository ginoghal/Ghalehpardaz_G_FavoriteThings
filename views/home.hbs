<section id="section3" class="panel">
    <h1 class="user-panel-heading">
    </h1>
    <h4>Here are Just Some of the Best Nintendo Switch Games Available right now!</h4>

    <div class="team">
        <!-- loops through each game here -->
        {{#each people}} <!-- this is like a  JS forEach loop -->
        <div class="user-panel">
            <img src="images/{{avatar}}" alt="user image" class="u-avatar">
            <a href="{{ID}}" class="u-link">
                Learn More!
            </a>

            <h1>{{Name}}</h1>
            
        </div>
        {{/each}}        
    </div>
    </div>

    <!-- this will be filled in on the client side when we render our AJAX data -->
    <section class="lightbox">
        <span class="close">x</span>
        <div class="sidebar">
            <img src="" alt="larger bio image">
        </div>

        <div class="lb-content">

        </div>
    </section>
</section>

